<Prefab>
    <Window>
        <ButtonWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"  SuggestedHeight="100" Brush="Clan.FaceDetaildCreator.Item.Tuple" Command.Click="OnHistoryRecordSelected" IsSelected="@IsSelected">
            <Children>
                <ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" MarginTop="8"    MarginBottom="8"  DoNotAcceptEvents="true"  RenderLate="true" >
                    <Children>
                        <ImageIdentifierWidget DataSource="{Visual}"  HorizontalAlignment="Center" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="100" SuggestedHeight="84"  AdditionalArgs="@AdditionalArgs" ImageId="@Id" ImageTypeCode="@ImageTypeCode" DoNotAcceptEvents="true"  RenderLate="true" />
                        <TextWidget WidthSizePolicy="StretchToParent"   HorizontalAlignment="Center"  Brush.FontSize="16"  HeightSizePolicy="StretchToParent" Brush="Clan.Tuple.Name.Text" Text="@DisplayName" DoNotAcceptEvents="true" />
                    </Children>
                </ListPanel>
            </Children>
        </ButtonWidget>
    </Window>

</Prefab>